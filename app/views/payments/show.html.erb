<h1>Purchase of teddy <%= @order.teddy_sku %></h1>
<%= form_tag order_payment_path(@order) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@order.amount) %></span>
    </label>
  </article>
<% end %>

<table class="qrcode">
 <% @qr.modules.each_index do |x| -%>
   <tr>
   <% @qr.modules.each_index do |y| -%>
    <% if @qr.dark?(x,y) -%>
      <td class="black"/>
    <% else -%>
      <td class="white"/>
    <% end -%>
   <% end -%>
   </tr>
 <% end -%>
</table>
