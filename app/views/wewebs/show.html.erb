<div class="weweb-photo__bd">

  <%= image_tag @teddy.photo, class: 'weweb-photo' %>
</div>
<div class="weui-form-preview__hd">

  <label class="weui-form-preview__label">Price</label>

  <em class="weui-form-preview__value"><%= humanized_money_with_symbol(@teddy.price) %></em>
</div>
<div class="weui-form-preview__bd">

  <div class="weui-form-preview__item">



    <label class="weui-form-preview__label">Name</label>



    <span class="weui-form-preview__value"><%= @teddy.name %></span>

  </div>

  <div class="weui-form-preview__item">



    <label class="weui-form-preview__label">Description</label>



    <span class="weui-form-preview__value">Some awesome description of our amazing teddy.</span>

  </div>
</div>
<div class="weui-form-preview__ft">

  <%= link_to 'Return', wewebs_path, class: 'weui-form-preview__btn weui-form-preview__btn_default' -%>

  <button type="submit" class="weui-form-preview__btn weui-form-preview__btn_primary" href="javascript:">Pay</button>
</div>
